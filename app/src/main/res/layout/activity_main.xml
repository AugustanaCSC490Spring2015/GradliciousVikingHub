<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#015a92">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/augie_logo_256x256"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Campus Tour"
        android:id="@+id/tourButton"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="#00000000" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Campus Map"
        android:id="@+id/mapButton"
        android:layout_below="@+id/tourButton"
        android:layout_alignLeft="@+id/tourButton"
        android:layout_alignStart="@+id/tourButton"
        android:layout_marginTop="33dp"
        android:background="#00000000" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Events"
        android:id="@+id/eventsButton"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/mapButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00000000" />
</RelativeLayout>
